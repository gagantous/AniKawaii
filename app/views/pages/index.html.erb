<script> 	$(document).on('mouseenter','.video', hoverVideo ).on('mouseleave','.video',hideVideo );
	function hoverVideo(e) {
		$('video',this).get(0).play();
		$('header',this).hide();
	}

	function hideVideo(e) {
		$('video',this).get(0).pause();
		$('header',this).show();
	}
</script>

 
<div class="container">

	<div class="row">
		<div class="col-lg-12">
		</div>

		<% @animegif.each do |gif| %>
			<% title = gif.url %>
			<% urlClass = gif.urlType %>

			<% if urlClass.include? "gfycat" %>
				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 thumb">

					<div class="video">
						<div class="module">
							
							<%= render 'rating',gif: gif %>

					<div class="embed-responsive embed-responsive-16by9">
						<%= link_to(gif) do %>
								<video class="embed-responsive-item" poster="https://thumbs.gfycat.com/<%= gif.url %>-poster.jpg" loop>   
							  
			            <source src=<%= gif.webmurl.sub("http://","https://") %> type="video/webm">
			            <source src=<%= gif.mp4url.sub("http://","https://") %> type="video/mp4">	
		            
			 		</video>  

			 		<% end %>
			 		</div>
			 	</div>
			 </div>
			</div>
		 	<% else %> 
		 	<!-- imgur !-->
		 		<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 thumb">

					<div class="video">
						<div class="module">
							<%= render 'rating',gif: gif %>

					<div class="embed-responsive embed-responsive-16by9">
						<%= link_to(gif) do %>
								<video class="embed-responsive-item" poster="<%= gif.urlType.sub("http://","https://") %>" loop>   
							  
			            <source src=<%= gif.webmurl.sub("http://","https://") %> type="video/webm">
			            <source src=<%= gif.mp4url.sub("http://","https://") %> type="video/mp4">	
		            
			 		</video>  

			 		<% end %>
			 		</div>
			 	</div>
			 </div>
			</div>
				<!-- ALTERNATIVE, for now only HTML5 videos -->
			<% end %>
		<% end %>
	</div>
		<div class="flickr_pagination">
			<%= will_paginate @animegif, renderer: BootstrapPagination::Rails %>
		</div>
</div>


