<div class="container">

	<div class="row">
		<div class="col-lg-12">
		</div>

		<% @animegif.each do |gif| %>
			<% title = gif.url %>
			<% urlClass = gif.urlType %>

			<% if urlClass.include? "gfycat" %>
				<%= render 'gfycat',gif: gif %>
		 	<% else %> 
		 	<!-- imgur !-->
		 		<%= render 'imgur',gif: gif %>
				<!-- ALTERNATIVE, for now only HTML5 videos -->
			<% end %>
		<% end %>
	</div>
		<div class="flickr_pagination">
			<%= will_paginate @animegif, renderer: BootstrapPagination::Rails %>
		</div>
</div>

  <footer>        
      <a href="https://github.com/wraithseeker/AniKawaii">

        <h5 class="text-center text-info" style="color:black;">
        	<i class="fa fa-github-alt fa-lg" style="padding-right:5px;position:relative;bottom:2px;" aria-hidden="true"></i>
        	Anikawaii Github
        </h5>
      </a>
  </footer>

