
<div class="container">
	<div class="row">
		<div class="col-lg-1">
			<%= link_to root_path do %> 
 			<button type="button" class="btn btn-primary btn-lg ">Back</button>
 			<% end %>
		</div>
		<div class="col-lg-9">

			<h3 class="text-primary"><%= @Animegif.name %></h3>
		</div>

		<div class="col-lg-9 col-md-12 col-xs-12">	
		<% if @Animegif.urlType.include? "gfycat" %>
			<div class="video">

					<div class="embed-responsive embed-responsive-16by9">

					<video class="resize" autoplay poster="http://thumbs.gfycat.com/<%= @Animegif.url %>-poster.jpg" loop>
							<source src=<%= @Animegif.webmurl %> type="video/webm">
								<source src=<%= @Animegif.mp4url %> type="video/mp4">
						</video>  

					</div>
			</div>
		<% else %>
		<div class="video">
			<div class="embed-responsive embed-responsive-16by9">
				<video class="embed-responsive-item" autoplay poster=<%= @Animegif.urlType%> loop>	
			        <source src=<%= @Animegif.webmurl %> type="video/webm">
			         <source src=<%= @Animegif.mp4url %> type="video/mp4">	
			 	</video>  
			</div>
		</div>
		<% end %>
		<!-- End of col-lg-9 column -->
		</div>
	</div>
</div>

<script type"text/javascript" src="http://test.gfycat.com/gfycat_test_may18.js"></script>  

<script>

if((navigator.userAgent.match(/iPad/i)) && (navigator.userAgent.match(/iPad/i)!= null)){
  		
		$('video').prop("controls",true);
	}



